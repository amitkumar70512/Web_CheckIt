  <script>
    
    setInterval(() => {
      document.getElementById("toast_login").addEventListener('click',fade_message('toast_login'));
    }, 3000);   
    document.getElementById('main').addEventListener('click',close_toast);
    function close_toast(){
      document.getElementById("toast_login").style.display='none';
    }
    
    function fade_message(id) {
    document.getElementById("toast_login").style.animation='fadeOut 6s linear infinite';
        setInterval(() => {
      document.getElementById(id).style.display = "none";
    }, 4500);   }
  </script>
