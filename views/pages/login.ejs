<body>

 <style>
  
      #toast_login{
            display:flex;
            flex-direction: column;
            position: absolute;
            top:10%;
            left:40%;
            background-color: rgb(255, 253, 250);
            opacity:1;
            cursor: pointer;
            border-left: 4px solid green;
            border-radius: 4px;
            max-width: 40%;
            max-height: 15%;
            animation-name: toast_logindisplay;
            overflow: hidden;
            animation-duration: 2s;
            animation-timing-function: ease-in-out;
     
            box-shadow: 3px 3px 5px black;
            -webkit-box-shadow: -19px 3px 31px -11px rgba(181,181,181,1);
            -moz-box-shadow: -19px 3px 31px -11px rgba(181,181,181,1);
            box-shadow: -19px 3px 31px -11px rgba(181,181,181,1);
        }
        @media screen and (max-width: 700px) {
        #toast_login{
          width: 100%;
          
        }
      }
        @keyframes toast_logindisplay {
            0%{
              transform: translateY(-200px);
            }
            50%{
              transform: translateY(100px);
            }
            100%{
              transform: translateY(0px);
            }
        }
        #toast_login:hover{
            opacity: 0.9;
            
        }
        #toast_login span{
            color:rgb(24, 134, 30);
            font-size: 20px;
            display: flex;
            justify-content: space-around;
        }
        #toast_login message_body{
            margin-top: 20px;
            padding:5px 20px;
            text-align: left;
            font-size: 18px;
            color:rgb(0, 121, 151);
            overflow-x: hidden;
            overflow-y: auto;
        }
        
    

 </style>
  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top d-flex align-items-center ">
    <div class="container d-flex justify-content-between align-items-center">

      <div class="logo">
        <h1 class="text-light"><a href="home"><span> CHECKIT</span></a></h1>
      
        <a href="home"> <img src="assets\img\animations\qr_header.gif" class="img-fluid" alt="qr animated" id="qr" ></a>
      </div>

      <nav id="navbar" class="navbar">
        <ul>
           <li><a href="home">Home</a></li>
           <li><a href="contact">Contact</a></li>
          <li><a href="team">Team</a></li>
          
          <li><a class="active" id="user_login" href="register">Sign In</a></li>
        </ul>
        <!-- <i class="bi bi-list mobile-nav-toggle"></i> -->
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->

  <main id="main">
    <div id="cover-spin"></div>
    <!-- ======= Contact Section ======= -->
    <section class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Log in</i></h2>
          <ol>
            <li><a href="#">Home</a></li>
            <li>Sign up</li>
          </ol>
        </div>

      </div>
    </section><!-- End Contact Section -->
    <% if(typeof toast_message!= 'undefined') { %>
    <div id="toast_login">
      <i class="fa-solid fa-check-to-slot"></i><span ><%= toast_message.header %> </span>
      <message_body> 
         <%= toast_message.body %> 
      </message_body>
  </div>
  <% } %>
  

    <section class="contact " data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
      <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
          <div class="col-md-8 col-lg-7 col-xl-6">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
          </div>
          <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

            <% if(typeof alert != 'undefined') { %>
              <% alert.forEach(function(error) { %>
                  <div class="alert alert-warning alert-dismissible fade show" role="alert">
                      <%= error.msg %>
                      <button  type="submit" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
              <% }) %>
          <% } %>
          
            <form action="/login" method="post">
              <!-- uid input -->
              <div class="form-outline mb-4">
                <input name="uid" class="form-control form-control-lg"  type="text">
                <label class="form-label" for="form1Example13">UID</label>
              </div>
    
              <!-- Password input -->
              <div class="form-outline mb-4">
                <input type="password"  class="form-control form-control-lg"   name="passkey" />
                <label class="form-label" for="form1Example23">Password</label>
              </div>
    
              <div class="d-flex justify-content-around align-items-center mb-4">
                <!-- Checkbox -->
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value=""  id="form1Example3"
                    checked
                  />
                  <label class="form-check-label" for="form1Example3"> Remember me </label>
                </div>
                <a href="#!">Forgot password?</a>
              </div>
              <!-- Submit button -->
              <button onclick="getCookie()" type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
              
              <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0 text-muted">Not have an account yet? <a href="register">Register</a></p>
               
              </div>
    
            </form>
          </div>
        </div>
      </div>
    </section>
    <style>
      .divider:after,
      .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
      }
